#include <systick.h>

void SYSTICK_init()
{
	SYSTICK_ClearCounterFlag();
	SYSTICK_InternalInit(100);
	SYSTICK_Cmd(ENABLE);
	SYSTICK_IntCmd(ENABLE);
}

int time = -1;

void SysTick_Handler(void)
{
	if (time > 0)
	{
		time += 1;
	}
}

void SYSTICK_wait(float time)
{
	count = (int) (time * 10);
	time = 0;
	
	while (time < count);
	
	time = -1;
}
