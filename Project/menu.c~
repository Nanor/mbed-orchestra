#include <keypad.h>
#include <lcd.h>
#include <menu.h>
#include "can.h"

int menu_volume = 10;
int menu_channel = 1;

void menu_display()
{
	LCD_clear();
	LCD_write_int("Volume:  %2d", menu_volume);
	LCD_set_pos(0, 1);
	LCD_write_int("Channel: %2d", menu_channel);
}

void menu_update()
{
	int key_val = KEYPAD_get_key();
	switch (key_val)
	{
		case 1:
			if (menu_volume > 0)
			{
				menu_volume--;
				set_volume((float)menu_volume / 10);
				menu_display();
			}
			break;
		case 2:
			if (menu_volume < 10)
			{
				menu_volume++;
				set_volume((float)menu_volume / 10);
				menu_display();
			}
			break;
		case 4:
			if (menu_channel > 1)
			{
				menu_channel--;
				set_channel(menu_channel);
				menu_display();		
			}
			break;
		case 5:
			if (menu_channel < 16)
			{
				menu_channel++;
				set_channel(menu_channel);
				menu_display();		
			}
			break;
	}
}
